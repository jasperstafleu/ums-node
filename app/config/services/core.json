{
  "logger": {
    "class": "Logger/Logger"
  },
  "kernel": {
    "class": "Component/Kernel",
    "arguments": [
      "@event.emitter"
    ]
  },
  "controller.tag_resolver": {
    "class": "Dependency/ControllerTagResolver",
    "arguments": [
      "@logger"
    ]
  },
  "param_converter.tag_resolver": {
    "class": "Dependency/ParamConverterTagResolver"
  },
  "param_converter.string": {
    "class": "Controller/ParamCoverter/StringConverter",
    "tags": [
      { "name": "param_converter" }
    ]
  },
  "param_converter.request": {
    "class": "Controller/ParamCoverter/RequestConverter",
    "tags": [
      { "name": "param_converter" },
      {
        "name": "kernel.event_listener",
        "event": "kernel.request",
        "method": "handleRequestEvent"
      }
    ]
  }
}
