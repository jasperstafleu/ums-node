{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "../dist",
    "sourceMap": false,
    "alwaysStrict": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
