{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$stafleu/*": ["src/*"],
      "$stafleu_config/*": ["config/*"],
      "$stafleu_local/*": ["local/*"]
    },
    "target": "es2019",
    "module": "commonjs",
    "outDir": "../dist",
    "sourceMap": false,
    "alwaysStrict": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "config/**/*.ts",
    "local/**/*.ts",
    "spec/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
